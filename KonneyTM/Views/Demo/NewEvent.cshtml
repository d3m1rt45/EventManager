@model KonneyTM.Models.NewEventViewModel
@{
    ViewBag.Title = "New Event";
}
@Styles.Render("~/PanelStyles")

<section class="Panel-NewEvent">
    <div class="Header">
        <h2>New Event</h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="Title form-group col-md-6 offset-3 text-center">
                <h4>Name of Event</h4>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div><!--/.Title-->

            <div class="Time form-group col-md-2 offset-5 text-center">
                <h4>Date</h4>
                @Html.TextBoxFor(model => model.Time, new { @type = "date", @class = "form-control datepicker text-center", @Value = Model.Time.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div><!--/.Time-->

            <div class="form-group text-center">
                <h4 class="col-md-12">Venue</h4>
                <div class="col-md-12">
                    <div class="PeopleInner row">
                        @for (var i = 0; i < Model.Venues.Count; i++)
                        {
                            <h6 class="col-3">
                                @Html.RadioButtonFor(model => model.Place, Model.Venues[i].Name) &emsp;
                                @Html.DisplayFor(model => model.Venues[i].Name)
                            </h6>
                        }
                    </div>
                </div>
            </div>

            <div class="form-group">
                <h4 class="text-center col-md-12">People Invited</h4>
                <div class="col-md-12">
                    <div class="PeopleInner row">
                        @for (var i = 0; i < Model.People.Count; i++)
                        {
                            <h6 class="col-3">
                                @Html.CheckBoxFor(model => model.People[i].Attending) &emsp;
                                @Html.DisplayFor(model => model.People[i].FirstName)
                                @Html.DisplayFor(model => model.People[i].LastName)
                            </h6>
                        }
                    </div>
                </div>
            </div>

            <div class="form-group w-100 d-flex justify-content-center">
                <div class="ButtonOut">
                    <input type="submit" value="Done!" class="ButtonIn btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>