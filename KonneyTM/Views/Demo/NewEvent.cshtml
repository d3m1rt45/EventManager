@model KonneyTM.Models.NewEventViewModel
@{
    ViewBag.Title = "New Event";
}
@Styles.Render("~/PanelStyles")

<section class="Panel-NewEvent">
    <div class="Header">
        <h2>New Event</h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="Title form-group col-md-4">
                <h4>Name of Event</h4>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div><!--/.Title-->

            <div class="Date form-group col-md-2">
                <h4>Date</h4>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", placeholder = "DD/MM/YYYY" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div><!--/.Date-->
            
            <div class="Time form-group col-md-2">
                <h4>Time</h4>
                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", placeholder = "HH:MM (24h)" } })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div><!--/.Date-->

            <div class="Venue form-group">
                <h4 class="col-md-12">Venue</h4>
                <div class="col-md-12">
                    <div class="VenueInner row">
                        @for (var i = 0; i < Model.Venues.Count; i++)
                        {
                            <h6 class="col-3">
                                @Html.RadioButtonFor(model => model.Place, Model.Venues[i].Name)&emsp;
                                @Html.DisplayFor(model => model.Venues[i].Name)
                            </h6>
                        }
                        <h5 class="col-3 mb-0 pb-0">
                            <a href="@Url.Action("NewVenue", "Demo")">Add Venue</a>
                        </h5>
                    </div>
                </div>
            </div>

            <div class="People form-group">
                <h4 class="col-md-12">People Invited</h4>
                <div class="col-md-12">
                    <div class="PeopleInner row">
                        @for (var i = 0; i < Model.People.Count; i++)
                        {
                            <h6 class="col-3">
                                @Html.CheckBoxFor(model => model.People[i].Attending)&emsp;
                                @Html.DisplayFor(model => model.People[i].FirstName)
                                @Html.DisplayFor(model => model.People[i].LastName)
                            </h6>
                        }
                        <h5 class="col-3">
                            <a href="@Url.Action("NewPerson", "Demo")">Add Person</a>
                        </h5>
                    </div>
                </div>
            </div>

            <div class="form-group w-100 d-flex justify-content-center">
                <div class="ButtonOut">
                    <input type="submit" value="Done!" class="ButtonIn btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>