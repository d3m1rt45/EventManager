@model KonneyTM.ViewModels.PersonViewModel

@{
    ViewBag.Title = "EditPerson";
}
@Styles.Render("~/PanelStyles")

<section class="Panel-EditPerson">
    <div class="Header mb-5">
        <h2>Edit Person</h2>
    </div><!--/.Header-->

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group col-md-4 offset-md-4 text-center">
                    <h4>First Name</h4>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger text-center" })
                </div>

                <div class="form-group col-md-4 offset-md-4 text-center">
                    <h4>Last Name</h4>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control text-center" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger text-center" })
                </div>

                <div class="form-group col-md-4 offset-md-4 text-center">
                    <h4>Phone Number</h4>
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger text-center" })
                </div>

                <div class="form-group col-md-4 offset-md-4 text-center">
                    <h4>Email Address</h4>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control text-center" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger text-center" })
                </div>

                <div class="form-group w-100 d-flex justify-content-center pt-2">
                    <div class="ButtonOut">
                        <input type="submit" value="Save" class="ButtonIn btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </section>
