@model List<KonneyTM.ViewModels.PersonViewModel>

@{
    ViewBag.Title = "People";
}
@Styles.Render("~/PanelStyles")

<section class="Panel-People">

    <div class="Header">
        <h2>People</h2>
    </div><!--/.Header-->

    <article class="PeopleRow row">
        @foreach (var item in Model)
        {

            <div class="PersonCol col-2">
                <div class="PersonCard text-center pt-4">
                    <a class="EditButton" href="@Url.Action("EditPerson", "Demo", new { id = item.ID})">
                        <i class="EditPerson fas fa-user-edit fa-2x"></i>
                    </a><!--/.EditButton-->
                    <h4 class="PersonName d-block">@item.FirstName @item.LastName.Substring(0, 1).</h4><!--/.PersonDetails-->
                    <h5 class="PersonEmail lead d-block">@item.Email</h5>
                    <h5 class="PersonPhone lead d-block">@item.PhoneNumber</h5>
                </div><!--/.PersonCard-->

            </div><!--/.PersonCol-->

        }
        <div class="NewPersonColumn col-2">
            <a class="NewPersonLink" href="@Url.Action("NewPerson", "Demo")">
                <div class="NewPerson">
                    <i class="fas fa-plus fa-4x"></i>
                </div><!--/.NewPerson-->
            </a><!--/.NewPersonLink-->
        </div><!--/.NewPersonColumn-->
    </article><!--/.PeopleRow-->
</section>
