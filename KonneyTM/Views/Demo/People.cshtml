@model List<KonneyTM.ViewModels.PersonViewModel>

@{
    ViewBag.Title = "People";
}
@Styles.Render("~/PanelStyles")

    <section class="Panel-People">

        <div class="Header">
            <h2>People</h2>
        </div><!--/.Header-->

        <article class="PeopleRow row">
            @foreach (var item in Model)
            {

                <div class="PersonCol col-2">
                    <div class="PersonCard text-center pt-4">
                        <a class="EditButton" href="@Url.Action("EditPerson", "Demo", new { id = item.ID})">
                            <i class="EditPerson fas fa-edit fa-2x"></i>
                        </a><!--/.EditButton-->
                        <a class="DeleteButton" data-toggle="modal" data-target="#DeleteVenueModal"
                           onclick="$('.modal-body').html('@item.FirstName @item.LastName will be deleted from your people list. Are you sure?');
                                                $('.ConfirmDelete').attr('href', '@Url.Action("DeletePerson", "Demo", new { id = @item.ID })')">
                            <i class="DeletePerson fas fa-trash-alt fa-2x"></i>
                        </a><!--/.DeleteButton-->
                        <h4 class="PersonName d-block">@item.FirstName</h4>
                        <h4 class="PersonName d-block">@item.LastName</h4>
                        <h5 class="PersonEmail lead d-block">@item.Email</h5>
                        <h5 class="PersonPhone lead d-block">@item.PhoneNumber</h5>

                    </div><!--/.PersonCard-->

                </div><!--/.PersonCol-->

            }
            <div class="NewPersonColumn col-2 pt-3">
                <a class="NewPersonLink" href="@Url.Action("NewPerson", "Demo")">
                    <div class="NewPerson">
                        <i class="fas fa-plus fa-4x"></i>
                    </div><!--/.NewPerson-->
                </a><!--/.NewPersonLink-->
            </div><!--/.NewPersonColumn-->
        </article><!--/.PeopleRow-->

        <article class="DeletePersonModal modal fade" id="DeleteVenueModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title text-danger">Delete Venue</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div><!--/.modal-header-->
                    <p class="modal-body font-weight-bold mb-0"></p>
                    <div class="modal-footer">
                        <a class="CloseModal btn btn-secondary text-light" data-dismiss="modal">Close</a>
                        <a class="ConfirmDelete btn btn-danger text-light">Delete</a>
                    </div><!--/.modal-footer-->
                </div><!--/.modal-content-->
            </div><!--/.modal-dialog-->
        </article><!--/.DeletePersonModal-->
    </section>
