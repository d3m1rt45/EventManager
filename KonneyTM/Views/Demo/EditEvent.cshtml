@model KonneyTM.ViewModels.EditEventVM
@{
    ViewBag.Title = "New Event";
}
@Styles.Render("~/PanelStyles")

<section class="Panel-NewEvent">
    <div class="Header">
        <h2>Edit Event</h2>
    </div>

    @using (Html.BeginForm("EditEvent", "Demo", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(x => x.ID);
        

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="Title form-group col-md-4 offset-md-4 text-center">
                <h4>Name</h4>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control text-center" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div><!--/.Title-->

            <div class="Date form-group col-md-4 offset-md-4 text-center">
                <h4>Date</h4>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control text-center pl-5", placeholder = "DD/MM/YYYY" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div><!--/.Date-->

            <div class="Time form-group col-md-4 offset-md-4 text-center">
                <h4>Time</h4>
                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control text-center pl-5", placeholder = "HH:MM (24h)" } })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div><!--/.Date-->

            <div class="form-group form-group col-md-4 offset-md-4 text-center">
                <h4>Update Image</h4>
                <input class="pl-5" type="file" name="ImageFile" accept="image/*"/>
            </div>

            <div class="form-group w-100 d-flex justify-content-center pt-3">
                <div class="ButtonOut">
                    <input type="submit" value="Save" class="ButtonIn btn btn-default" />
                </div>
            </div>
        </div>
    }
</section>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>