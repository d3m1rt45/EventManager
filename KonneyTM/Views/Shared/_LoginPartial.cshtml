@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated || Request.Path.Contains("Events") || Request.Path.Contains("People") || Request.Path.Contains("Venues"))
{
    <li class="Events nav-item">
        @Html.ActionLink("Events", "Index", "Events", null, new { @class = "nav-link text-light" })
    </li>
    <li class="Venues nav-item">
        @Html.ActionLink("Venues", "Index", "Venues", null, new { @class = "nav-link text-light" })
    </li>
    <li class="People nav-item">
        @Html.ActionLink("People", "Index", "People", null, new { @class = "nav-link text-light" })
    </li>
}
else
{
    <li class="nav-item">
        @Html.ActionLink("Demo", "Index", "Events", null, new { @class = "nav-link text-light" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-light" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-light" })
    </li>
}
