@model IEnumerable<KonneyTM.ViewModels.VenueViewModel>

@{
    ViewBag.Title = "Venues";
}
@Styles.Render("~/PanelStyles")

<section class="Venues-Index">

    <div class="Header">
        <h2>Venues</h2>
    </div><!--/.Header-->

    <article class="VenueRow row">

        @foreach (var item in Model)
        {
            <div class="VenueCol col-md-4">
                <div class="VenueCard" style="background-image: url(/Images/Venues/@item.ImagePath)">
                    <div class="overlay text-center d-flex justify-content-center align-items-center">
                        <div class="Align">
                            <a class="EditButton" href="@Url.Action("Edit", new { venueID = item.ID })">
                                <i class="EditVenue fas fa-edit fa-2x"></i>
                            </a><!--/.EditButton-->
                            <a class="DeleteButton" data-toggle="modal" data-target="#ConfirmModal"
                               onclick="$('#ConfirmModal .modal-body').html('@item.Name and all events scheduled here will be deleted. Are you sure?');
                                                $('#ConfirmModal .Confirm').attr('href', '@Url.Action("Delete", new { venueID = item.ID })')">
                                <i class="DeleteVenue fas fa-trash-alt fa-2x"></i>
                            </a><!--/.DeleteButton-->
                            <h4 class="VenueName d-block">@item.Name</h4>
                            <h5 class="VenuePhone lead d-block">@item.PhoneNumber</h5>
                            <h5 class="VenueAddress lead d-block">@item.Address</h5>
                            <h5 class="VenuePostCode lead d-block">@item.PostCode</h5>
                        </div>
                    </div><!--/.Align-->
                </div><!--/.VenueCard-->
            </div><!--/.VenueCol-->
        }
        <div class="NewVenueColumn col-md-4">
            <a class="NewVenueLink" href="@Url.Action("Create")">
                <div class="NewVenue">
                    <i class="fas fa-plus fa-4x"></i>
                </div><!--/.NewVenue-->
            </a><!--/.NewVenueLink-->
        </div><!--/.NewVenueColumn-->

    </article><!--/.VenueRow-->

    @Html.Partial("_ConfirmModalPartial")

</section>
